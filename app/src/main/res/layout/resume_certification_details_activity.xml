<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/colorHighlight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llCartificationInformation"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangledata">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCert1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification 1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertTitle1"
                    android:hint="Certificate Title"
                    android:inputType="textCapSentences"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertYear1"
                    android:hint="Certificate Year"
                    android:inputType="date"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCert2"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification 2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertTitle2"
                    android:hint="Certificate Title"
                    android:inputType="textCapSentences"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertYear2"
                    android:hint="Certificate Year"
                    android:inputType="date"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCert3"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification 3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertTitle3"
                    android:hint="Certificate Title"
                    android:inputType="textCapSentences"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertYear3"
                    android:hint="Certificate Year"
                    android:inputType="date"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCert4"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification 4"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertTitle4"
                    android:hint="Certificate Title"
                    android:inputType="textCapSentences"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertYear4"
                    android:hint="Certificate Year"
                    android:inputType="date"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCert5"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification 5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertTitle5"
                    android:hint="Certificate Title"
                    android:inputType="textCapSentences"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertYear5"
                    android:hint="Certificate Year"
                    android:inputType="date"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCert6"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification 6"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertTitle6"
                    android:hint="Certificate Title"
                    android:inputType="textCapSentences"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCertYear6"
                    android:hint="Certificate Year"
                    android:inputType="date"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                >

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_remove_black_18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:id="@+id/removeCertification"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add_black_18dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:id="@+id/addCertification"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>